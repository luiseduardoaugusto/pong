<!-- Start of Selection -->
<div class="container mx-auto px-4" data-controller="match">
  <h1 class="text-3xl font-bold mb-4">New Ping Pong Match</h1>

  <div id="match-counter" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <div class="flex justify-between items-center mb-4">
      <div class="w-1/2 pr-2">
        <input type="text" data-match-target="player1Name" placeholder="Player 1 Name" class="w-full p-2 border border-blue-500 rounded text-blue-500">
      </div>
      <div class="w-1/2 pl-2">
        <input type="text" data-match-target="player2Name" placeholder="Player 2 Name" class="w-full p-2 border border-red-500 rounded text-red-500">
      </div>
    </div>

    <div class="flex justify-between items-center mb-4">
      <div class="w-1/2 pr-2 flex items-center">
        <button data-action="click->match#updateScore" data-match-player-param="1" data-match-change-param="-1" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">-</button>
        <span data-match-target="player1Score" class="mx-4 text-2xl font-bold text-blue-500">0</span>
        <button data-action="click->match#updateScore" data-match-player-param="1" data-match-change-param="1" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">+</button>
      </div>
      <div class="w-1/2 pl-2 flex items-center justify-end">
        <button data-action="click->match#updateScore" data-match-player-param="2" data-match-change-param="-1" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">-</button>
        <span data-match-target="player2Score" class="mx-4 text-2xl font-bold text-red-500">0</span>
        <button data-action="click->match#updateScore" data-match-player-param="2" data-match-change-param="1" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">+</button>
      </div>
    </div>

    <div class="text-center">
      <button data-match-target="saveButton" data-action="click->match#saveMatch" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" disabled>Save Match</button>
    </div>

    <!-- New element to show winner notice -->
    <div data-match-target="winnerNotice" class="mt-4 text-lg font-semibold text-green-600 hidden"></div>
  </div>
</div>

<%= link_to 'Back to Matches', matches_path, class: 'inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-300' %>
<!-- End of Selection -->