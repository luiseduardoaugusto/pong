<div class="flex flex-col items-center">
  <h1 class="text-4xl font-bold mb-6 text-gray-800">Ping Pong Matches</h1>
  <%= link_to 'New Match', new_match_path, class: 'inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-300 mb-8' %>
  
  <div class="w-full grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @matches.each do |match| %>
      <div class="bg-white shadow-md rounded-lg px-6 py-4 flex flex-col justify-between">
        <div>
          <h2 class="text-xl font-bold mb-2 text-gray-700"><%= match.player1_name %> vs <%= match.player2_name %></h2>
          <p class="text-gray-600">Date: <%= match.date %></p>
          <p class="text-lg font-semibold text-gray-800">Score: <%= match.player1_score %> - <%= match.player2_score %></p>
          <p class="text-green-600 font-medium">Winner: <%= match.winner %></p>
        </div>
        <%= link_to 'View Details', match_path(match), class: 'mt-4 inline-block text-blue-500 hover:text-blue-700 font-medium transition duration-300' %>
      </div>
    <% end %>
  </div>
</div>