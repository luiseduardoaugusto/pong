<div class="container mx-auto px-4">
  <h1 class="text-3xl font-bold mb-4">Ping Pong Matches</h1>
  <%= link_to 'New Match', new_match_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  
  <div class="mt-4">
    <% @matches.each do |match| %>
      <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <h2 class="text-xl font-bold mb-2"><%= match.player1_name %> vs <%= match.player2_name %></h2>
        <p>Date: <%= match.date %></p>
        <p>Score: <%= match.player1_score %> - <%= match.player2_score %></p>
        <p>Winner: <%= match.winner %></p>
        <%= link_to 'View Details', match_path(match), class: 'text-blue-500 hover:text-blue-700' %>
      </div>
    <% end %>
  </div>
</div>